generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             String    @id @default(uuid())
  publicId       String    @unique @default("")
  name           String
  cpf            String    @unique
  phone          String
  email          String    @unique
  password       String
  role           Role      @default(USER)
  tokenVersion   Int       @default(0)
  birthdate      DateTime?
  profilePicture String    @default("defaultPicture.jpg")
  profileBanner  String    @default("defaultBanner.jpg")
  favorites      Houses[]   @relation("UserFavorites")
  houses         Houses[]   @relation("UserHouses")
}

model Houses {
  id          Int         @id @default(autoincrement())
  status      HouseStatus @default(SALE)
  price       String
  address     String
  description String
  area        String
  suites      Int
  bedrooms    Int
  bathrooms   Int
  garages     Int
  media       String[]
  ownership   String
  publishDate DateTime    @default(now())
  closed      Boolean     @default(false)
  owner       Users?      @relation("UserHouses", fields: [ownership], references: [id])
  favoritedBy Users[]     @relation("UserFavorites")
}


enum HouseStatus {
  SALE
  RENT
}

enum Role {
  USER
  AGENT
  ADMIN
}
